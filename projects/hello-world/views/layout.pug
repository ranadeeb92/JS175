doctype html

html(html=language)
  head
    block page_title
      title Hello World
    meta(charset="UTF-8")
    link(rel="stylesheet" href="/stylesheets/application.css")

  body
    nav
      ul
        each country in countries 
          li
            a(href=country.path class=currentPathClass(country.path, currentPath))
              img.flag(src=`/images/${country.flag}`
                      alt=country.alt
                      title=country.title)

    header
      block greeting
        h1 Hello World!
    main
      block software_engineer 